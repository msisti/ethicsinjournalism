<p id="notice"><%= notice %></p>

<h1>Listing Comment Forms</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_forms.each do |comment_form| %>
      <tr>
        <td><%= link_to 'Show', comment_form %></td>
        <td><%= link_to 'Edit', edit_comment_form_path(comment_form) %></td>
        <td><%= link_to 'Destroy', comment_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

